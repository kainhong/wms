<!doctype html />
<html>
<head>
    <script src="/static/lib/jquery.js" type="text/javascript"></script>
    <script src="/static/lib/angular.js" type="text/javascript"></script>
    <script src="/static/lib/angular-resource.js" type="text/javascript"></script>
    <script src="/static/app/services/yg.services.js" type="text/javascript"></script>
    <script src="/static/app/services/yg.global.env.js" type="text/javascript"></script>
    <script src="/static/app/controllers/yg.globalController.js" type="text/javascript"></script>
    <script src="/static/lib/easyUI/js/jquery.easyui.min.js" type="text/javascript"></script>
    <link href="/static/lib/easyUI/themes/icon.css" rel="stylesheet" type="text/css" />
    <link href="/static/lib/easyUI/themes/black/easyui.css" rel="stylesheet" type="text/css" />
    <script src="/static/app/directives/yg.component.js" type="text/javascript"></script>    
    <title></title>
</head>
<body>
    <div id="cc" class="easyui-layout" fit="true" ng-controller='globalCtrl'>
        <div data-options="region:'north'" style="height: 79px;">
            <div class="logo-header">
                <div class="logo-header-banner">
                </div>
                <div class="logo-header-status">
                </div>
            </div>
        </div>
        <div data-options="region:'west',title:'目录导航',split:false,iconCls:'text_list_bullets'"
            style="width: 180px">
            <div class="easyui-tabs" style="width: 220px;height:795px;">
                <div title="功能清单">
                    <div yg-menu on-node-click='menuClick(node)'>
                    </div>
                </div>
                <div title="最近使用">
                    <ul>
                        <li ng-repeat="item in recentModules">
                            <label style="cursor:hand;" ng-click="openModule(item)">[{{item.attributes.moduleId}}]{{item.text}}</label>
                        </li>
                    </ul>
                </div>
            </div>


        </div>
        <div id="center" data-options="region:'center'" style="padding: 0px; background: #eee; height: 500px">
            <div class="easyui-tabs" yg-tabs>
                <div title="欢迎界面">
                </div>
            </div>
        </div>
    </div>
    <script>
        angular.bootstrap(document.body, ['app']);
    </script>
</body>
</html>
